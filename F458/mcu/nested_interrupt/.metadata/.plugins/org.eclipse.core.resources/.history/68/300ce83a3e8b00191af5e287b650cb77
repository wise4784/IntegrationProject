/* USER CODE BEGIN (0) */
/* USER CODE END */

/* Include Files */

#include "HL_sys_common.h"

/* USER CODE BEGIN (1) */
#include "HL_ecap.h"
#include "HL_sci.h"
#include "FreeRTOS.h"
#include "os_queue.h"
#include "os_task.h"
#include "HL_het.h"

#include <stdio.h>
#include <string.h>
/* USER CODE END */

/** @fn void main(void)
*   @brief Application main function
*   @note This function is empty by default.
*
*   This function is called after startup.
*   The user can use this function to implement the application.
*/

/* USER CODE BEGIN (2) */
TaskHandle_t t1;
TaskHandle_t t2;

void dummyTask(void* pbParamaters);
void dummyTask2(void* pbParamaters);
void sci_display(sciBASE_t* sci, uint8* buf, int len);
void wait(int delay);
/* USER CODE END */

int main(void)
{
/* USER CODE BEGIN (3) */
    char buf[64];
    int len;
    int f1,f2;
    sciInit();

    f1=xTaskCreate(dummyTask,"t1",configMINIMAL_STACK_SIZE*2,NULL,1,&t1);
    f2=xTaskCreate(dummyTask2,"t2",configMINIMAL_STACK_SIZE*2,NULL,1,&t2);

    if(f1!=pdPASS||f2!=pdPASS){
        sprintf(buf,"error!!\n\r\0");
        len=strlen(buf);
        sci_display(sciREG1,(uint8 *)buf,len);
    }

    ecapInit();
    //ecapStartCounter(ecapREG1);
    //ecapStartCounter(ecapREG2);

    vTaskStartScheduler();
/* USER CODE END */

    return 0;
}


/* USER CODE BEGIN (4) */
void dummyTask(void* pbParamaters){
    char buf[64];
    int len;
    for(;;){
        sprintf(buf,"task1\n\r\0");
        len=strlen(buf);
       sci_display(sciREG1,(uint8 *)buf,len);
    }
}

void dummyTask2(void* pbParamaters){
    char buf[64];
    int len;
    for(;;){
        sprintf(buf,"task2\n\r\0");
        len=strlen(buf);
       sci_display(sciREG1,(uint8 *)buf,len);
    }
}

void sci_display(sciBASE_t* sci, uint8* buf, int len){
    while(len--){
        while(sci->FLR&0x4==4)
            ;
        sciSendByte(sci,*buf++);
    }
}

void ecapNotification(ecapBASE_t *ecap,uint16 flags){
    char buf[64];
    int len;

    if(ecap==ecapREG1){
        sprintf(buf,"CAP1 Start\n\r\0");
        len=strlen(buf);
        sci_display(sciREG1,(uint8 *)buf,len);
        wait(100);

        sprintf(buf,"CAP1 END\n\r\0");
        len=strlen(buf);
        sci_display(sciREG1,(uint8*)buf,len);
        ecapDisableInterrupt(ecapREG1,ecapInt_CEVT3);

    }
    if(ecap==ecapREG2){
        sprintf(buf,"CAP2 Start\n\r\0");
        len=strlen(buf);
        sci_display(sciREG1,(uint8*)buf,len);
        wait(10000);
        sprintf(buf,"CAP2 END\n\r\0");
        len=strlen(buf);
        sci_display(sciREG1,(uint8*)buf,len);
    }
}

void wait(int delay){
    int i;
    for(i=0;i<delay;i++)
        ;
}

void hetNotification(hetBASE_t *het, uint32 offset){
    int len;
    char buf[64];

    if(het==hetREG1){
        sprintf(buf,"het1\n\r\0");
        len=strlen(buf);
        sci_display(sciREG1,(uint8*)buf,len);
    }else{
        sprintf(buf,"het2\n\r\0");
        len=strlen(buf);
        sci_display(sciREG1,(uint8*)buf,len);
    }
}

void hetRAMinit(){
    hetRAM1->Instruction[0]={ {
                                     0x00002C80U,
                                     0x01FFFFFFU,
                                     0xFFFFFF80U,
                                     0x00000000U
                                 }, },
}
/* USER CODE END */
